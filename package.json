{
    "name": "toggleformatonsave",
    "displayName": "ToggleFormatOnSave",
    "description": "Quick Toggle for FormatOnSave setting",
    "version": "0.0.1",
    "publisher": "misq",
    "engines": {
        "vscode": "^1.27.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.toggleFormatOnSave"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [{
                "command": "extension.toggleFormatOnSave",
                "title": "format on save",  
                "category": "Toggle"
        }],
        "keybindings": [{
            "command": "extension.toggleFormatOnSave",
            "key": "ctrl+alt+x",
            "mac": "cmd+alt+x",
            "when": "editorFocus"
        }]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/msiq/ToggleFormatOnSave.git"
    },
    "homepage": "https://github.com/msiq/ToggleFormatOnSave/blob/master/README.md",
    "icon": "images/icon.png"
}
